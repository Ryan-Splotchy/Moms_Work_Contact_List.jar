<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.DialogController">


    <headerText>
        Input the following information:
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Company Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="companyNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" onMouseClicked="#clearCompanyNameField"/>
            <Label text="Name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1" onMouseClicked="#clearNameField"/>
            <Label text="Phone Number" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneNumberField" GridPane.rowIndex="2" GridPane.columnIndex="1" onMouseClicked="#clearPhoneNumberField"/>
            <Label text="Notes" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="notesField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

</DialogPane>
